# Display the on and off values off an FS20 device
# Corresponding FileLog definition:
# define fs20log FileLog /var/log/fhem/fs20dev-%Y-%U.log fs20dev

set terminal png transparent size <SIZE> crop
set output '<OUT>.png'
set xdata time
set timefmt "%Y-%m-%d_%H:%M:%S"
set xlabel " "
set title '<TL>'

set ytics ("Aus" 0, "Ein" 1)
set y2tics ("off" 0, "on" 1)
set yrange [0:1]
set y2range [0:1]
#set ylabel "Status"
#set y2label "Status"

#FileLog 3::0:$fld[2]=~"EIN"?1:0

plot "< awk '{print $1, $2~/EIN/? 1 : 0; }' <IN>"\
        using 1:2 ls l6fill notitle with steps \
        axes x1y1 title 'Lade-Pumpe' with lines lw 2

        

